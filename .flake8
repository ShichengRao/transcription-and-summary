[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    transcripts,
    backups

# Ignore specific error codes
ignore = 
    E203,
    E501,
    W503,
    W504

per-file-ignores =
    __init__.py:F401

# Show source code for errors
show-source = True

# Count errors
count = True

# Show statistics
statistics = True
